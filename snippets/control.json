{
    "If (cond) { code }": {
        "prefix": "if",
        "body": [
            "if (${1:condition}) {",
            "  ${2:#code...}",
            "}"
        ],
        "description": "If block"
    },
    "If .. else ..": {
        "prefix": "ife",
        "body": [
            "if (${1:condition}) {",
            "  ${2:#code...}",
            "} else {",
            "  ${3:#code...}",
            "}"
        ],
        "description": "If .. else .."
    },
    "else ..": {
        "prefix": "else",
        "body": [
            "else {",
            "  ${1:#code...}",
            "}"
        ],
        "description": "else .."
    },
    "elsif ..": {
        "prefix": [
            "elsif",
            "elif",
            "eif"
        ],
        "body": [
            "elsif (${1:cond}) {",
            "  ${2:#code...}",
            "}"
        ],
        "description": "elsif .."
    },
    "if .. elsif ..": {
        "prefix": [
            "ifelif",
            "ifelsif"
        ],
        "body": [
            "if (${1:cond}) {",
            "  ${2:#code...}",
            "} elsif (${3:cond}) {",
            "  ${4:#code...}",
            "}"
        ],
        "description": "if .. elsif .."
    }
}